CAPTION "Файловый менеджер — Курсовой проект"
FONT 10, "Segoe UI"
BEGIN
GROUPBOX        " Левая панель ", 0, 10, 10, 360, 460
COMBOBOX        IDC_COMBO_LEFT, 20, 30, 100, 200, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
CONTROL         "", IDC_LIST_LEFT, "SysListView32",
LVS_REPORT | LVS_SINGLESEL | WS_BORDER | WS_TABSTOP,
20, 55, 330, 390
LTEXT           "", IDC_STATIC_LEFT, 20, 450, 330, 14, SS_LEFT

GROUPBOX        " Правая панель ", 0, 390, 10, 360, 460
